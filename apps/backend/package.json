    "pg": "^8.16.3",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
