{
  "framework": "nextjs",
  "buildCommand": "cd ../.. && pnpm build:shared && cd apps/frontend && pnpm build",
  "installCommand": "cd ../.. && pnpm install",
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
